@model WebASP_App.Models.User
@{
    ViewBag.Title = "Добавление пользователя";
}
<h2>Регистрация</h2>
<form asp-action="CreateNewUser" asp-controller="Registration">
    <div class="form-group">
        <label asp-for="Email" class="control-label">Имя</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Email" required minlength="6" maxlength="50" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Пароль</label>
        <input type="text" asp-for="Password" class="form-control" placeholder="Пароль" required minlength="6" maxlength="50" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>
